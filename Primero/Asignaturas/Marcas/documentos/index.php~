<textarea id="Audio1Codigo" rows=3 cols=100>
	<embed src="../audio/Thank_You.mp3" width=400" height=100 autostart=false hidden=false></embed>
	<embed src="../video/pixar.mp4" width=800px" height=600px autostart=true hidden=false></embed>
